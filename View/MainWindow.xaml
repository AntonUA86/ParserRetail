<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:View.ViewModels"
        xmlns:l="clr-namespace:View"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800" >
    <Window.DataContext>
        <vm:MainWindowsViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Ашан">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Категория">
                        <ListBox ItemsSource="{Binding ProductsInfo}" 
                                 DisplayMemberPath="Categories"
                                 SelectedItem="{Binding SelectedGroup}"
                                 />
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="{Binding SelectedGroup.Categories , FallbackValue='Список товаров'}">
                        <DataGrid ItemsSource="{Binding SelectedGroup.Results}" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  GridLinesVisibility="Vertical"
                                  VerticalGridLinesBrush="DarkGray"
                                  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Продукт" Binding="{Binding title}"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding price}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Влкадка 2"></TabItem>
        </TabControl>
    </DockPanel>

</Window>
